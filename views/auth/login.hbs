<section id="auth" class="main-section">
  <h1>Login</h1>
  <div class="login-box-container">
    <form action="/auth/login" method="POST">

      <div class="user-field user-field-edit">
        <label class="user-info-text">👤 Username</label>
        <input type="text" name="username" placeholder="username" />
      </div>
      <div class="user-field user-field-edit">
        <label class="user-info-text">🔐 Password</label>
        <input type="password" name="password" placeholder="********" />
      </div>      
      <div id="login-container">
        <button type="submit" id="login-button">Login</button>
      </div>

    </form>
  </div>
  <div id="edit-messages-box">
  {{#if registration}}
    <h2 class="update-success">✅ Registration successful!</h2>
  {{/if}}
    {{#if error}}
    {{#each error}}
      <h2 class="error-message">❌{{this}}</h2>
    {{/each}}
    {{/if}}
  </div>
</section>