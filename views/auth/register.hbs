<section id="auth" class="main-section">
  <h1>Register Page  </h1>
  <div id="register-form">
  <form action="/auth/register" method="POST">
    <div class="user-field user-field-edit">
      <label class="user-info-text">👤 Username</label>
      <input type="text" name="username" maxlength="11"/>
    </div>
    <div class="user-field user-field-edit">
      <label class="user-info-text">📧 Email</label>
      <input type="text" name="email"/>
    </div>   
    <div class="user-field user-field-edit">
      <label class="user-info-text">🔐 Password</label>
      <input type="password" name="password" />
    </div>
    <div class="user-field user-field-edit">
      <label class="user-info-text">🔐 Again</label>
      <input type="password" name="repeatedPassword" />
    </div>           
    <div id="login-container">
      <button type="submit" id="register-button">Register</button>
    </div>
  </form>
  </div>
  <div id="edit-messages-box">
    {{#if error}}
    {{#each error}}
      <h2 class="error-message">❌{{this}}</h2>
    {{/each}}
    {{/if}}
  </div>
</section>